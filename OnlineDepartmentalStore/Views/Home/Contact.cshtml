@{
    ViewBag.Title = "Contact";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <section class="contactArea container body-content">
        <form style="margin-top:80px">

            <ul class="form-style-1">
                <p style="font-family: 'Roboto';font-size:18px">
                    Feel free to contact us anytime at +88096-3636-3636.<br>
                    Or if you prefer, you can drop us a note using the form below. You'll always get a response
                    from a real person — with a real name — within 48 hours.
                </p>
                <h3 style="margin-bottom:20px;margin-top:20px;font-family: 'Roboto';">Contact Us</h3>
                <li><label>Full Name <span class="required">*</span></label><input type="text" name="field1" class="field-divided" placeholder="First" />&nbsp;<input type="text" name="field2" class="field-divided" placeholder="Last" /></li>
                <li>
                    <label>Email <span class="required">*</span></label>
                    <input type="email" name="field3" class="field-long" />
                </li>
                <li>
                    <label>Subject</label>
                    <select name="field4" class="field-select">
                        <option value="Advertise">Complain</option>
                        <option value="Partnership">Compliment</option>
                        <option value="General Question">General</option>
                    </select>
                </li>
                <li>
                    <label>Your Message <span class="required">*</span></label>
                    <textarea name="field5" id="field5" class="field-long field-textarea"></textarea>
                </li>
                <li>
                    <input type="submit" value="Submit" />
                </li>
            </ul>
        </form>
    </section>
 </body>
</html>